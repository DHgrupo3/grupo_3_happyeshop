    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@700&display=swap" rel="stylesheet">

    <title>Happy e-Shop - Home</title>
</head>
<body>
    <%- include ("../partials/header") %>
    <main>
        <article>
            <br>
            <br>
            <a href="/admin/create_product"><i class="fa-solid fa-plus"></i>&nbsp;&nbsp;Crear Producto</a>
            <br>
            <br>
        </article>
        <!-- <article>
            <button class="up"><a href="/products/edit_product">Editar Producto</a></button>
        </article>
        <article>
            <button class="up"><a href="/products/delete_product">Borrar Producto</a></button>
        </article> -->
        
        <article class="burger-menu"><a href="#" ><i class="fas fa-bars img burger"></i></a></article>
        
        <article >
            <table>
                <thead>
                    <th scope="col">Id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Editar</th>
                    <th scope="col">Borrar</th>
                </thead>
                <tbody>
            <% productos.forEach(productos => { %>
                <tr>
                    <td><%= productos.id%>&nbsp;&nbsp;</td>
                    <td><%= productos.nombre%>&nbsp;&nbsp;</td>
                    <!--  -->
                    <td><a href="/admin/edit_product?id=<%= productos.id%>"> <i class="fa-solid fa-pencil"></i></a></td>
                    <td><a href="/admin/delete_product?id=<%= productos.id%>"><i class="fa-solid fa-trash"></i></a></td>
                </tr>
            
            <%  }); %>
            </tbody>
            </table>
        </article>


        

    </main>
   
    
    <%- include ("../partials/footer") %>
    
</body>



</html>
